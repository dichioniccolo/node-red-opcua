{
  "name": "node-red-contrib-capgemini-opcua",
  "version": "0.0.1",
  "description": "Description of the node set here",
  "scripts": {
    "add-node": "node ./utils/add-node.js",
    "copy": "copyfiles -u 2 \"./src/nodes/**/*.{png,svg}\" \"./dist/nodes/\"",
    "build:editor": "rollup -c rollup.config.editor.js",
    "build:editor:watch": "rollup -c rollup.config.editor.js -w",
    "build:runtime": "tsc -p tsconfig.runtime.json",
    "build:runtime:watch": "tsc -p tsconfig.runtime.watch.json --watch --preserveWatchOutput",
    "build": "rm -rf dist && pnpm copy && pnpm build:editor && pnpm build:runtime",
    "test": "jest --forceExit --detectOpenHandles --colors",
    "test:watch": "jest --forceExit --detectOpenHandles --watchAll",
    "dev": "rm -rf dist && pnpm copy && concurrently --kill-others --names 'COPY,EDITOR,RUNTIME,TEST' --prefix '({name})' --prefix-colors 'yellow.bold,cyan.bold,greenBright.bold,magenta.bold' 'onchange -v \"src/**/*.png\" \"src/**/*.svg\" -- pnpm copy' 'pnpm build:editor:watch' 'pnpm build:runtime:watch' 'sleep 10; pnpm test:watch'",
    "lint": "prettier --ignore-path .eslintignore --check '**/*.{js,ts,md}'; eslint --ext .js,.ts .",
    "lint:fix": "prettier --ignore-path .eslintignore --write '**/*.{js,ts,md}'; eslint --ext .js,.ts . --fix"
  },
  "author": "Capgemini",
  "license": "MIT",
  "node-red": {
    "nodes": {
      "opcua-config": "./dist/nodes/opcua-config/opcua-config.js",
      "opcua-client": "./dist/nodes/opcua-client/opcua-client.js"
    }
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.14",
    "@types/mustache": "^4.2.6",
    "@types/node": "^24.0.1",
    "@types/node-red": "^1.1.1",
    "@types/node-red-node-test-helper": "^0.3.4",
    "@types/sinon": "^17.0.4",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "colorette": "^2.0.20",
    "concurrently": "^9.1.2",
    "copyfiles": "^2.4.1",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jest": "^28.13.5",
    "eslint-plugin-prettier": "^5.4.1",
    "glob": "^11.0.3",
    "jest": "^30.0.0",
    "mustache": "^4.2.0",
    "node-red": "^4.0.9",
    "node-red-node-test-helper": "^0.3.4",
    "onchange": "^7.0.2",
    "prettier": "^3.5.3",
    "rollup": "^4.43.0",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3"
  },
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ]
  },
  "dependencies": {
    "effect": "^3.16.6",
    "node-opcua": "^2.156.0",
    "node-opcua-crypto": "^4.16.0"
  }
}